<% @page_header = 'XDS Utility' %>

<table id="dashboard">

  	<tr>
    <th class="sortable">Template</th>
    <th><div>Created by</div></th>
    <th class="sortable">Created on</th>
    <th class="sortable">Last modified</th>
    <th><div>XDS ID</div></th>
    <th><div>Documents</div></th>
  </tr>

  <% @patients.each do |patient| -%>
    <tr>
	  <% if !@laika_patients[ patient ].nil? %>
	  <td><%= link_to h(@laika_patients[ patient ].name), patient_url(@laika_patients[ patient ]) %></td>
      <td><%=h @laika_patients[ patient ].user.first_name %> <%=h @laika_patients[ patient ].user.last_name %></td>
      <td><%= @laika_patients[ patient ].created_at %></td>
      <td><%= @laika_patients[ patient ].updated_at %></td>
	  <% else %>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
	  <% end %>
	
		
      <td><%= patient[ 'value' ] %></td>
 	  <td class="actions" width=270px>
        <% if @documents[ patient ].empty? %>
			no documents associated with this record
		<% else %>
			<%= link_to 'show documents', "javascript:toggle_div('document_div_#{patient.id}')" %>
		<% end %>
        <div id="document_div_<%=patient.id%>" style="display:none">
          <% @documents[ patient ].each do |document| %>
   			   <p><%= document %> | <%= submit_tag 'Retrieve Document' %></p>
           <% end %>
         </div>
       </td>
      
     </tr>
   <% end -%>
 </table>

