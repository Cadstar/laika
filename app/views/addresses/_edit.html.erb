<% parent.fields_for :address do |address_form| -%>
  <%= address_form.text_field :street_address_line_one %>
  <%= address_form.text_field :street_address_line_two %>
  <%= address_form.text_field :city %>
  <%= address_form.select :state, IsoState.select_options, :include_blank => true %>
  <%= address_form.text_field :postal_code %>
  <%= address_form.select :iso_country_id, IsoCountry.select_options, :include_blank => true %>
<% end -%>
